pipeline {
    agent any
    options {
        disableConcurrentBuilds()
    } 
    stages {
        stage('SCM Checkout') {
          steps {
                git 'https://github.com/HariDEV-GIT/terra_test.git'
          }
        }
        stage('Terraform Format Check') {
            steps {
                script {
                    def fmtStatus = sh "terraform fmt -list=true -write=false -diff=true -check=true"
                    if (fmtStatus == 0) {
                        echo "Format is Okay"
                    } 
                    else {
                        stage('Terraform Format Failed') {
                           script {
                                def Status = sh "terraform fmt -list=true -write=false -diff=false -check=true"
                                if (Status ==0) { 
                                    echo "Code Format Failed"
                                }
                           }
                        }     
                    }
                }
             }
         }
     }
}
