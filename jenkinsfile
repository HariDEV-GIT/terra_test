pipeline {
    agent any
    options {
        disableConcurrentBuilds()
    }
    stages {
        stage('SCM Checkout') {
            steps {
                git 'https://github.com/HariDEV-GIT/terra_test.git'
            }
	      }
    stage('Terraform Code Clean') {
            steps {
                sh '''def fmtStatus = sh "terraform fmt -list=true -write=false -diff=true -check=true"
		      if (fmtStatus == 0) {
  			echo "All correct"
			} 
		      else {
  			echo "Changes necessary"
		      }'''
            }
        }	     
    }
}
